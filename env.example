# =============================================================================
# API Gateway - Environment Configuration
# =============================================================================
# Environment variables for the API Gateway microservice
# Copy this file to .env and fill in the actual values
# =============================================================================

# =============================================================================
# SPRING CONFIGURATION
# =============================================================================
# Application profile (local, docker, prod)
SPRING_PROFILE=local

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Gateway server settings

SERVER_PORT=8989
HOSTNAME=localhost

# =============================================================================
# SERVICE DISCOVERY
# =============================================================================
# Eureka service registry configuration

EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://localhost:8761/eureka/

# =============================================================================
# GATEWAY ROUTING
# =============================================================================
# Service routing configuration

# User Service
USER_SERVICE_URL=http://localhost:8081

# Project Service  
PROJECT_SERVICE_URL=http://localhost:8083

# Notification Service
NOTIFICATION_SERVICE_URL=http://localhost:8082

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Cross-Origin Resource Sharing settings

CORS_ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000,http://127.0.0.1:3000,https://127.0.0.1:3000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Gateway security settings

# Rate limiting
RATE_LIMIT_REQUESTS_PER_SECOND=100
RATE_LIMIT_BURST_CAPACITY=200

# Circuit breaker
CIRCUIT_BREAKER_FAILURE_RATE_THRESHOLD=50
CIRCUIT_BREAKER_SLOW_CALL_RATE_THRESHOLD=50

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================
# Health check and metrics configuration

MANAGEMENT_ENDPOINTS_ENABLED=true
METRICS_EXPORT_ENABLED=true
TRACING_ENABLED=false

# =============================================================================
# TIMEOUT CONFIGURATION
# =============================================================================
# Request timeout settings

GATEWAY_HTTPCLIENT_RESPONSE_TIMEOUT=60000
GATEWAY_HTTPCLIENT_CONNECT_TIMEOUT=30000
GATEWAY_HTTPCLIENT_POOL_MAX_IDLE_TIME=15000
GATEWAY_HTTPCLIENT_POOL_MAX_LIFE_TIME=60000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level settings

LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_GATEWAY=DEBUG
LOGGING_LEVEL_SECURITY=DEBUG
LOGGING_LEVEL_WEB=DEBUG
